class Solution {
    public int minDominoRotations(int[] A, int[] B) {
        
        //4 possibilities are there
        int minSwaps = Math.min(
            numSwaps(A[0],A,B), //make everything in A match A[0]
            numSwaps(B[0],A,B) //make everything in A match B[0]
        );
        minSwaps = Math.min(minSwaps,numSwaps(A[0],B,A));
        minSwaps = Math.min(minSwaps,numSwaps(B[0],B,A));
        return minSwaps == Integer.MAX_VALUE ? -1 : minSwaps;
    }
    
    public int numSwaps(int target,int[] A,int[] B){
        int numSwaps=0;
        for(int i=0;i<A.length;i++){
            if(A[i] != target && B[i] != target)
                return Integer.MAX_VALUE;
            else if(A[i] != target)
                numSwaps++;
        }
        
        return numSwaps;
    }
}
